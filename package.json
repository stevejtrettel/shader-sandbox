{
  "name": "@stevejtrettel/shader-sandbox",
  "version": "0.1.11",
  "description": "Local Shadertoy-compatible GLSL shader development environment with live editing",
  "author": "Steve Trettel",
  "license": "MIT",
  "homepage": "https://github.com/stevejtrettel/shader-sandbox",
  "repository": {
    "type": "git",
    "url": "https://github.com/stevejtrettel/shader-sandbox.git"
  },
  "keywords": [
    "shader",
    "glsl",
    "shadertoy",
    "webgl",
    "graphics",
    "creative-coding"
  ],
  "type": "module",
  "main": "./dist-lib/index.js",
  "types": "./dist-lib/index.d.ts",
  "exports": {
    ".": {
      "node": "./dist-lib/node.js",
      "import": "./dist-lib/index.js",
      "types": "./dist-lib/index.d.ts",
      "default": "./dist-lib/index.js"
    },
    "./node": {
      "import": "./dist-lib/node.js",
      "types": "./dist-lib/node.d.ts",
      "default": "./dist-lib/node.js"
    },
    "./runtime": {
      "import": "./dist-runtime/shader-sandbox.js",
      "default": "./dist-runtime/shader-sandbox.js"
    }
  },
  "bin": {
    "shader": "./bin/cli.js"
  },
  "files": [
    "bin",
    "dist-lib",
    "dist-runtime",
    "templates"
  ],
  "scripts": {
    "new": "node scripts/new-demo.cjs",
    "dev": "vite",
    "dev:demo": "node scripts/dev-demo.cjs",
    "build": "tsc && vite build",
    "build:lib": "node scripts/build-lib.cjs",
    "build:runtime": "vite build --config vite.config.runtime.ts",
    "prepublishOnly": "npm run build:lib",
    "preview": "vite preview"
  },
  "dependencies": {
    "prismjs": "^1.30.0",
    "vite": "^5.0.0",
    "vite-plugin-css-injected-by-js": "^3.5.2"
  },
  "optionalDependencies": {
    "puppeteer-core": "^24.34.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/prismjs": "^1.26.5",
    "typescript": "^5.3.3"
  }
}
